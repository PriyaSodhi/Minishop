<div class="form-group">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for([ @user, @user.addresses.build ]) do |f| %>

  <p>Property Details</p>

  <%= f.label :address1, "Address 1" %>
  <%= f.text_field :address1, class: "form-control" %>

  <%= f.label :address2, "Address 2" %>
  <%= f.text_field :address2, class: "form-control" %>

  <%= f.label :city %>
  <%= f.text_field :city, class: "form-control" %>

  <%= f.label :district %>
  <%= f.text_field :district, class: "form-control" %>

  <%= f.label :suburb %>
  <%= f.text_field :suburb, class: "form-control" %>

  <%= f.label :post_code %>
  <%= f.text_field :post_code, class: "form-control" %>

  <%= f.submit "Continue", class: "btn btn-primary btn-lg" %>

  <% end %>
  </div>
</div>