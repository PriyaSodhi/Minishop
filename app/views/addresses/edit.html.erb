<% provide(:button_text, "Save changes") %>
<h1 class="center">Update your Profile</h1>
<div class="form-group">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [ @user, @address] do |f| %>

      <%= f.label :address1, "Address 1" %>
      <%= f.text_field :address1, class: "form-control" %>

      <%= f.label :address2, "Address 2" %>
      <%= f.text_field :address2, class: "form-control" %>

      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>

      <%= f.label :district %>
      <%= f.text_field :district, class: "form-control" %>

      <%= f.label :suburb %>
      <%= f.text_field :suburb, class: "form-control" %>

      <%= f.label :post_code %>
      <%= f.text_field :post_code, class: "form-control" %>

      <%= f.fields_for :icp do |icp_form| %>
        <%= icp_form.label :number, "ICP Number" %>
        <%= icp_form.text_field :number, class: "form-control" %>
      <% end %>
      <h5>(ICP number is Optional)</h5>

      <%= f.submit yield(:button_text), class: "btn btn-primary btn-lg" %>

    <% end %>
  </div>
</div>