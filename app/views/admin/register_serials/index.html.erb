<%= render 'admin/addresses/sidebar' %>
<div class="col-md-8 col-md-offset-3">
  <h1 class="center">Register Serials</h1>
  <table class="table table-striped table-responsive">
    <tr>
      <th> Register Serials</th>
      <th colspan="2">Actions</th>
    </tr>

    <% @register_serials.each do |reg| %>
      <tr>
        <td><%= reg.meter_number %>
        :<%= reg.register_number %>
        [<%= reg.register_decimals %>]</td>
        <td><%= link_to "Edit", edit_admin_user_address_icp_register_serial_path(@user, @address, @address.icp, reg) , class: "btn btn-primary" %> </td>
        <td>
          <%= link_to "Delete", admin_user_address_icp_register_serial_path(@user, @address, @address.icp, reg), method: :delete, data: { confirm: "Are you sure?" } , class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </table>
  </div>
