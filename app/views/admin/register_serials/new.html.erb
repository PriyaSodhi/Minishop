<%= render 'admin/addresses/sidebar' %>
<div class="center form-group row">
    <%= form_for([:admin, @user, @address, @address.icp, @register_serial]) do |f| %>

      <p>Register Serial</p>
      <div class="col-xs-2 col-md-offset-3">
        <%= f.label :meter_number %>
        <%= f.text_field :meter_number, class: "form-control" %>
      </div>

      <div class="col-xs-2">
        <%= f.label :register_number %>
        <%= f.text_field :register_number, class: "form-control" %>
      </div>

      <div class="col-xs-2">
        <%= f.label :register_decimals %>
        <%= f.telephone_field :register_decimals, class: "form-control" %>
      </div>
      <div class="col-xs-2">
        <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
        <%= link_to "Back", admin_user_address_path(@user, @address) %>
      </div>

    <% end %>

  </div>
</div>
